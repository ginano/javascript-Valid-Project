       <script id='script-source-code'  type="text/javascript" language="JavaScript">
			  //下面的代码验证了，解析器应该是先将所有的变量加入到上下文的变量列表中，并设值为undefined
			  //然后再把function进行解析同样加入到上下文的变量列表中
			  //在执行到当前作用域时则对var声明变量进行赋值操作
			  //最后按照逻辑流程进行处理
			  log(foo);
			  log(test);
			  var foo=function(){return 3;}
			  function foo(){
			  	return 4;
			  }
			  function test(){
			  	return 5;
			  }
			  var test=function(){
			  	return 6;
			  }
			  //只有firefox会是1，其他IE6/opera/chrome都是2
			  if(true) {
			    function foo(){ return 1; }
			  }
			  else {
			    function foo(){ return 2; }
			  }
			  log(foo);
			  log(test);
			  log(foo());
			  
			//-------------------其他IE下的bug调试
			log(typeof g);
			var f = function g() {
				return 7;
			};
			if (false) {
				f = function g(){
					return 8;
				};
			}
			log(typeof g);
			log(g()); 
			
			//------看看全局变量gg设置成功了没---
			
			(function(){
				gg = function gg(){};
				log(gg);
			})();
			log(gg);	

		</script>
